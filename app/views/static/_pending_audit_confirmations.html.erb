<% pending_audit_confirmations.each do |pending_audit_confirmation| %>
  <%= link_to "I confirm that I did not have any overtime for the week of:<br/>
              #{pending_audit_confirmation.start_date.to_formatted_s(:long) } through
              #{(pending_audit_confirmation.start_date + 6.days).to_formatted_s(:long)}".html_safe,
              confirm_audit_log_path(pending_audit_confirmation),
              class: 'btn btn-primary btn-lg btn-block',
              style: 'white-space:normal !important;',
              id: "confirm_#{pending_audit_confirmation.id}",
              data: {confirm: 'Are you sure you wish to confirm that you did not perform any overtime?'} %>
<% end %>